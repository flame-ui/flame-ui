{
  "name": "@flame-ui/react",
  "version": "0.3.2",
  "description": "flame-ui for react",
  "main": "lib/index.js",
  "module": "lib/index.esm.js",
  "typings": "lib/index.d.ts",
  "repository": "git@github.com:flame-ui/flame-ui-react.git",
  "author": "Nick <nikolaymuller@gmail.com>",
  "license": "MIT",
  "files": [
    "lib"
  ],
  "release": {
    "branches": [
      "main",
      "next"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false,
          "tarballDir": "dist"
        }
      ]
    ]
  },
  "scripts": {
    "build": "yarn clean && rollup -c",
    "clean": "rimraf lib",
    "test": "jest",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "prettier": "prettier --write '*/**/*.{js,ts,tsx,json,md}'",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable"
  },
  "prettier": "@mullerstd/eslint-config/prettier",
  "eslintConfig": {
    "extends": "@mullerstd"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@mullerstd/eslint-config": "^1.3.0",
    "@storybook/addon-actions": "^6.1.14",
    "@storybook/addon-essentials": "^6.1.14",
    "@storybook/addon-links": "^6.1.14",
    "@storybook/react": "^6.1.14",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.0",
    "@types/styled-components": "^5.1.7",
    "@types/styled-system": "^5.1.10",
    "@types/styled-system__css": "^5.0.14",
    "babel-loader": "^8.2.2",
    "eslint": "^7.18.0",
    "husky": "^5.0.6",
    "jest": "^26.6.3",
    "pinst": "^2.1.1",
    "prettier": "^2.2.1",
    "react-is": "^17.0.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.37.0",
    "rollup-plugin-typescript2": "^0.29.0",
    "semantic-release": "^17.3.6",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@flame-ui/hooks": "^1.1.0",
    "@flame-ui/theme": "^0.2.0",
    "@jesstelford/react-portal-universal": "^1.0.6",
    "@styled-system/css": "^5.1.5",
    "polished": "^4.0.5",
    "react": "^17.0.0",
    "react-dom": "^17.0.1",
    "react-hook-form": "^6.14.2",
    "styled-components": "^5.2.0",
    "styled-system": "^5.1.5"
  }
}
